License:                BSD3
License-File:           LICENSE
Category:               Apple
Synopsis:               Combined Form Data and Form Template for Cobalt Kiosk Application Backend
Description:            Combined Form Data and Form Template for Cobalt Kiosk Application Backend
Cabal-Version:          >= 1.10
Build-Type:             Simple
Extra-source-files:     README.md

Library
  Default-Language:     Haskell2010
  HS-Source-Dirs:       src
  GHC-Options:          -Wall
  Exposed-Modules:      Kiosk.Backend.Data
                        Kiosk.Backend.Data.DataTemplateEntry
                        Kiosk.Backend.Data.MigrationClass
                        Kiosk.Backend.Data.Migrations
                        Kiosk.Backend.Data.Migrations.Standardization
                        Kiosk.Backend.Data.Migrations.FormVersionZero
                        Kiosk.Backend.Data.Migrations.CobaltBaseForm
                        Kiosk.Backend.Data.DataTemplate
                        Kiosk.Backend.Data.DataTemplateEntryKey

  Other-Modules:        Kiosk.Backend.Table
                         
  Build-Depends:        aeson
                      , aeson-serialize
                      , attoparsec >= 0.12.1.2 && < 0.13
                      , base                       >= 4 && < 5
                      , bytestring
                      , cassava
                      , cereal >= 0.4.0 && < 0.5.0
                      , cobalt-kiosk-form-template >= 1.2.6 && < 1.3.0
                      , unordered-containers >= 0.2.5.1 && < 0.3
                      , either >= 4.3.1 && < 4.4
                      , lens                      >= 4 && < 4.5
                      , old-locale
                      , parsers >= 0.12.1.1 && < 0.13.0
                      , plow-extras-time  >= 0.1.1
                      , semigroups >=0.8.4 && < 1
                      , tables
                      , text
                      , time >= 1.4.2 && < 1.5.0
                      , uuid >= 1.3.8 && < 1.4.0
                      , vector >= 0.10.12.2 && < 0.11
                      , hashable >= 1.2.3.1 && < 1.3
                      , regex-tdfa-text >= 1.0.0.2 && < 1.1
                      , regex-tdfa >= 1.2.0 && < 1.3.0

Test-Suite spec
  Type:                 exitcode-stdio-1.0
  Default-Language:     Haskell2010
  Hs-Source-Dirs:       src
                      , test
  Ghc-Options:          -Wall
  Main-Is:              Spec.hs
  Build-Depends:        base
                      , QuickCheck
                      , regex-genex
                      , primitive-generator-mocks
                      , hspec
                      , HUnit
                      , cobalt-kiosk-form-template
                      , plow-extras-time
                      , aeson
                      , cereal
                      , aeson-serialize
                      , text     
                      , bytestring                  
                      , unordered-containers
                      , containers >= 0.5.5.1
                      , lens
                      , parsers
                      , hashable
                      , serial-test-generators >= 0.1.3
                      , template-haskell
                      , attoparsec
                      , tables
                      , uuid
                      , cassava
                      , regex-tdfa-text
                      , regex-tdfa 
                      , vector
                      , time
                      , old-locale
                      , either


